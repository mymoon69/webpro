<%- include('header') -%>

    <% if(data==undefined){ %>
        <!-- ไม่พบข้อความ -->
        <h1>ไม่พบข้อความ</h1>
        <% }else{ %>

            <body>
                <nav class="navbar is-info" role="navigation" aria-label="main navigation">
                    <div class="navbar-brand">
                        <a class="navbar-item" href="">
                            <h1>YOU BLOG</h1>
                        </a>

                        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false">
                            <span aria-hidden="true"></span>
                            <span aria-hidden="true"></span>
                            <span aria-hidden="true"></span>
                        </a>
                    </div>

                    <div id="navbarBasicExample" class="navbar-menu">
                        <div class="navbar-start">
                            <a class="navbar-item" href="">
                                Home
                            </a>
                        </div>
                    </div>
                </nav>
                <div class="container box p-6 my-5">
                    <h3 class="title is-3 mb-5">
                        <%= data.title %>
                    </h3>
                    <img src="<%= data.feature_image %>" alt="NO IMAGE"
                        style="display: block; margin: 0 auto; width: 75%" />
                    <br />
                    <p>
                        <%= data.description %>
                    </p>
                    <br />
                    <button class="button is-info is-light">
                        <i class="far fa-thumbs-up mr-2"></i> Like
                    </button>
                    <hr />
                    <div class="columns is-align-items-center">
                        <div class="column is-10">
                            <h5 class="title is-5">Writer : <%= data.author %>
                            </h5>
                        </div>
                        <div class="column is-2 has-text-right">
                            <button class="button is-primary is-light">Follow</button>
                        </div>
                    </div>
                    <hr />
                    <h4 class="title is-4">Comment</h4>
                    <article class="media">
                        <figure class="media-left">
                            <p class="image is-64x64 has-rounded">
                                <img class="is-rounded" src="https://bulma.io/images/placeholders/128x128.png" />
                            </p>
                        </figure>
                        <div class="media-content">
                            <div class="field">
                                <p class="control">
                                    <textarea class="textarea" placeholder="Add a comment..." name="comment"></textarea>
                                </p>
                            </div>
                            <nav class="level">
                                <div class="level-left">
                                    <div class="level-item">
                                        <input type="submit" class="button is-info" value="Send" />
                                    </div>
                                </div>
                            </nav>
                        </div>
                    </article>
                    <% data.comments.forEach(function(data){ %>
                        <article class="media">

                            <figure class="media-left">
                                <p class="image is-64x64">
                                    <img class="is-rounded" src="https://bulma.io/images/placeholders/128x128.png" />
                                </p>
                            </figure>
                            <div class="media-content">
                                <div class="content">
                                    <p>
                                        <strong>Anonymous</strong>
                                        <br />
                                        <%= data %>
                                    </p>
                                </div>
                            </div>
                        </article>
                        <% }); %>
                </div>
                <% } %>

            </body>